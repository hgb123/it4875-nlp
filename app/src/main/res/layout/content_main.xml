<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nlp.nlptest.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="105dp"
        android:layout_height="54dp"
        android:text="Tìm kiếm"
        android:layout_marginLeft="49dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/txtQuery"
        android:layout_marginStart="49dp" />

    <EditText
        android:id="@+id/txtQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nội dung tìm kiếm"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="67dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        app:layout_constraintLeft_toRightOf="@+id/txtQuery"
        android:layout_marginLeft="63dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="67dp"
        android:layout_marginStart="49dp" />

    <Button
        android:id="@+id/btnIndexAndSearch"
        android:layout_width="149dp"
        android:layout_height="58dp"
        android:text="Index and Search"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btnClear"
        app:layout_constraintLeft_toRightOf="@+id/btnSearch"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp" />

    <Spinner
        android:id="@+id/spTruyen"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_voicesearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm bằng giọng nói"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="178dp"
        android:layout_marginRight="92dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
